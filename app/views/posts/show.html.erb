<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">

  <h1 class="text-3xl font-bold text-blue-700 mb-6">
    <%= @post.title %>
  </h1>

  <p class="text-gray-700 text-lg mb-6">
    <%= @post.content %>
  </p>

  <p class="text-gray-500 text-sm mb-8">
    Publicado el <%= @post.created_at.strftime("%d/%m/%Y %H:%M") %>
  </p>

  <div class="flex gap-4">
    <%= link_to "Todos los Posts", posts_index_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded shadow" %>

    <%= link_to "Editar", posts_edit_path(@post), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded shadow" %>

    <%= button_to "Eliminar", posts_destroy_path(@post), method: :delete, data: { confirm: "¿Estás seguro que quieres eliminar este post?" }, class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded shadow" %>
  </div>

</div>
