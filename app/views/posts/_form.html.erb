<% if @post.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
    <p class="font-bold text-red-700 mb-2">Se encontraron errores:</p>
    <ul class="text-red-600 list-disc pl-5">
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, url: (@post.persisted? ? posts_update_path(@post) : posts_create_path), local: true, class: "w-full mx-auto bg-white shadow-lg rounded-lg p-8" do |form| %>
  
  <h2 class="text-3xl font-bold text-blue-600 mb-6">
    <%= @post.persisted? ? "Editar Post" : "Nuevo Post" %>
  </h2>

  <div class="mb-6">
    <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-4 py-3 text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-150" %>
  </div>

  <div class="mb-6">
    <%= form.label :content, class: "block text-gray-700 font-semibold mb-2" %>
    <%= form.text_area :content, rows: 6, class: "w-full border border-gray-300 rounded px-4 py-3 text-gray-700 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-150" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit(@post.persisted? ? "Actualizar Post" : "Crear Post", class: "bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold py-3 px-6 rounded shadow hover:shadow-lg transition duration-200") %>
  </div>
<% end %>
